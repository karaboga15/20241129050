<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eğitim Portalı</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm mb-3 py-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <div class="d-flex flex-column align-items-start">

                    <a class="navbar-brand fw-bold text-dark fs-3 mb-1 d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index" style="line-height: 1;">
                        <i class="bi bi-mortarboard-fill text-warning me-2" style="font-size: 2rem;"></i>
                        Eğitim Portalı
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-dark btn-sm mt-1" type="button" id="solMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="width: 50px;">
                                <i class="bi bi-list text-white" style="font-size: 1.2rem;"></i>
                            </button>

                            <ul class="dropdown-menu shadow mt-2" aria-labelledby="solMenuDropdown">
                                <li><h6 class="dropdown-header text-muted small">GENEL</h6></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i> Ana Sayfa</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="About"><i class="bi bi-info-circle me-2"></i> Hakkımızda</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Contact"><i class="bi bi-envelope me-2"></i> İletişim</a></li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-danger fw-bold small">YÖNETİM PANELİ</h6></li>

                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Yönetici Paneli</a></li>
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index"><i class="bi bi-tags me-2"></i> Kategoriler</a></li>
                                    <li><a class="dropdown-item" asp-controller="Course" asp-action="List"><i class="bi bi-journal-bookmark me-2"></i> Kurslar</a></li>
                                    <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Index"><i class="bi bi-person-badge me-2"></i> Eğitmenler</a></li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center">

                        <span class="text-secondary me-3 fw-bold d-none d-md-block border-end pe-3 fs-5">
                            <i class="bi bi-person-circle" style="font-size: 1.5rem; vertical-align: middle;"></i>
                            @User.Identity.Name
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge bg-danger ms-1" style="font-size: 0.7rem;">Admin</span>
                            }
                        </span>

                        <button onclick="logoutAjax()" class="btn btn-danger px-4 py-2 fw-bold shadow-sm">
                            <i class="bi bi-box-arrow-right me-1"></i> Çıkış
                        </button>
                    </div>
                }
                else
                {
                    <div>
                        <a class="btn btn-outline-primary me-2 fw-bold" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                        </a>

                        <a class="btn btn-primary fw-bold" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus-fill me-1"></i> Kayıt Ol
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-auto py-4">
        <div class="container">
            <div class="text-center">
                <i class="bi bi-mortarboard-fill text-warning me-2"></i>
                &copy; @DateTime.Now.Year - <strong>Eğitim Portalı</strong> - Tüm Hakları Saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function logoutAjax() {
            Swal.fire({
                title: 'Çıkış Yapılıyor',
                text: "Oturumu kapatmak istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Çıkış Yap',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/Account/Logout",
                        success: function (response) {
                            if (response.success) {
                                window.location.href = '/Account/Login';
                            } else {
                                // Fallback (eğer json dönmezse direkt yönlendir)
                                window.location.href = '/Account/Login';
                            }
                        },
                        error: function () {
                            Swal.fire('Hata', 'Çıkış yapılırken bir sorun oluştu.', 'error');
                        }
                    });
                }
            })
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>