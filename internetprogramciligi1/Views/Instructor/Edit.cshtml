@model internetprogramciligi1.Models.Instructor
@{
    ViewData["Title"] = "Eğitmen Düzenle"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3"><h6 class="m-0 font-weight-bold text-primary">Eğitmen Düzenle</h6></div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="fw-bold">Ad</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Surname" class="fw-bold">Soyad</label>
                    <input asp-for="Surname" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="fw-bold">Ünvan</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="fw-bold">Resim URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>