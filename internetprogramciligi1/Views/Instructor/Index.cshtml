@model IEnumerable<internetprogramciligi1.Models.Instructor>
@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container mt-5">
    <h2>Eğitmen Listesi</h2>
    <p><a asp-action="Create" class="btn btn-primary">Yeni Eğitmen Ekle</a></p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Ad Soyad</th>
                <th>Ünvan</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.Id">
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="50" class="rounded-circle" />
                        }
                        else
                        {

                            <span>Resim Yok</span>
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.Title</td>
                    <td>
                        <button onclick="deleteInstructor(@item.Id)" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function deleteInstructor(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu eğitmeni silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Instructor/DeleteAjax/" + id,
                    success: function (result) {
                        if (result.success) {
                            $("#row_" + id).fadeOut(500, function() { $(this).remove(); });
                            Swal.fire('Silindi!', 'Eğitmen başarıyla silindi.', 'success');
                        }
                    },
                    error: function () { Swal.fire('Hata', 'Silme işlemi başarısız oldu.', 'error'); }
                });
            }
        })
    }
</script>