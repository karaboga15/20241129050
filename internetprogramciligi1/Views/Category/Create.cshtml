@model internetprogramciligi1.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; /* Admin Paneline Bağladık */
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Yeni Kategori Ekle</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Yazılım, Tasarım..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>