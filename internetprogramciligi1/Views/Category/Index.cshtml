@model IEnumerable<internetprogramciligi1.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-5">
    <h2>Kategori Listesi</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr id="row_@item.Id">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <button onclick="deleteCategory(@item.Id)" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function deleteCategory(id) {
       
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu kategoriyi silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
               
                $.ajax({
                    type: "POST",
                    url: "/Category/DeleteAjax/" + id,
                    success: function (result) {
                       
                        if (result.success) {
                            $("#row_" + id).fadeOut(500, function() {
                                $(this).remove();
                            });

                            Swal.fire(
                                'Silindi!',
                                'Kategori başarıyla silindi.',
                                'success'
                            )
                        }
                    },
                    error: function () {
                        Swal.fire('Hata', 'Silme işlemi başarısız oldu.', 'error');
                    }
                });
            }
        })
    }
</script>