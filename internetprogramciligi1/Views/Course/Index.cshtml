@model IEnumerable<internetprogramciligi1.Models.Course>

@{
    ViewData["Title"] = "Tüm Kurslar";
}

<div class="bg-light py-5 mb-4">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Tüm Kurslar</h1>
        <p class="lead text-muted">Kariyerinize yön verecek eğitimleri keşfedin.</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0 p-4" style="background-color: #f8f9fa;">
                <form method="get" asp-action="Index" class="row g-2 align-items-center">
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                            <input type="text" name="search" class="form-control border-start-0 ps-0" placeholder="Hangi kursu arıyorsunuz?" value="@ViewBag.CurrentSearch">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <select name="categoryId" class="form-select">
                            <option value="">Tüm Kategoriler</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in ViewBag.Categories)
                                {
                                    if (ViewBag.CurrentCategory != null && (int)ViewBag.CurrentCategory == cat.Id)
                                    {
                                        <option value="@cat.Id" selected>@cat.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary fw-bold w-100">Ara</button>
                        @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || ViewBag.CurrentCategory != null)
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Sıfırla</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200?text=Egitim+Portali" class="card-img-top" style="height: 200px; object-fit: cover;">
                            }
                            <span class="badge bg-primary position-absolute top-0 end-0 m-2">@item.Category?.Name</span>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Title</h5>

                            <div class="d-flex align-items-center mb-3">
                                @if (item.Instructor != null && !string.IsNullOrEmpty(item.Instructor.ImageUrl))
                                {
                                    <img src="@item.Instructor.ImageUrl" class="rounded-circle me-2" width="30" height="30" style="object-fit:cover;">
                                }
                            <small class="text-muted">@(item.Instructor?.FullName ?? "Eğitmen Belirtilmedi")</small>
                        </div>

                        <p class="card-text text-secondary small">
                            @(item.Description != null && item.Description.Length > 90
                                                    ? item.Description.Substring(0, 90) + "..."
                                                    : item.Description)
                    </p>
                </div>

                        <div class="card-footer bg-white border-top-0 pb-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100 fw-bold">
                                <i class="bi bi-eye"></i> İncele
                            </a>
                        </div>
                    </div>
                </div>
                }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-warning d-inline-block">
                    <i class="bi bi-exclamation-circle me-2"></i> Aradığınız kriterlere uygun kurs bulunamadı.
                </div>
            </div>
        }
    </div>
</div>