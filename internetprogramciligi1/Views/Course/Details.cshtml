@model internetprogramciligi1.Models.Course

@{
    ViewData["Title"] = "Kurs Detayı";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title">
            }
            else
            {
                <img src="https://via.placeholder.com/600x400?text=Resim+Yok" class="img-fluid rounded shadow" alt="Resim Yok">
            }
        </div>

        <div class="col-md-7">
            <h2 class="display-5 fw-bold">@Model.Title</h2>

            <div class="mb-3">
                <span class="badge bg-warning text-dark fs-6">Kategori: @Model.Category?.Name</span>
            </div>

            @if (Model.Instructor != null)
            {
                <div class="d-flex align-items-center mb-4 p-3 border rounded bg-light">
                    @if (!string.IsNullOrEmpty(Model.Instructor.ImageUrl))
                    {
                        <img src="@Model.Instructor.ImageUrl" alt="@Model.Instructor.FullName" class="rounded-circle me-3" width="60" height="60" style="object-fit:cover;">
                    }
                    <div>
                        <h6 class="mb-0 text-muted">Eğitmen</h6>
                        <h5 class="mb-0">@Model.Instructor.FullName</h5>
                        <small class="text-primary">@Model.Instructor.Title</small>
                    </div>
                </div>
            }

            <h5 class="text-muted">Kurs Açıklaması:</h5>
            <p class="lead">
                @Model.Description
            </p>

            <div class="mt-5">
                <button onclick="enrollCourse(@Model.Id)" class="btn btn-success btn-lg px-4 me-2">
                    <i class="bi bi-cart-plus"></i> Kursa Kaydol (Ücretsiz)
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function enrollCourse(id) {
        $.ajax({
            type: "POST",
            url: "/Profile/Enroll",
            data: { courseId: id },
            success: function (res) {
                if (res.success) {
                    Swal.fire({
                        title: 'Tebrikler!',
                        text: res.message,
                        icon: 'success',
                        confirmButtonText: 'Profilime Git'
                    }).then(() => {
                        window.location.href = "/Profile/Index"; // Kayıttan sonra profile git
                    });
                } else {
                    // "Zaten kayıtlısınız" vb. mesajlar için
                    Swal.fire('Bilgi', res.message, 'info');
                }
            },
            error: function(xhr) {
                // Eğer oturum açmamışsa hata verir
                Swal.fire({
                    title: 'Giriş Yapmalısınız',
                    text: 'Kursa kaydolmak için lütfen giriş yapın.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Giriş Yap',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "/Account/Login";
                    }
                });
            }
        });
    }
</script>