@model internetprogramciligi1.Models.Course

@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; /* Admin Paneline Bağladık */
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Yeni Kurs Ekle</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="fw-bold">Kurs Başlığı</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="fw-bold">Kategori</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                <option value="">-- Kategori Seçiniz --</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="InstructorId" class="fw-bold">Eğitmen</label>
                            <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                                <option value="">-- Eğitmen Seçiniz --</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageUrl" class="fw-bold">Kapak Resmi URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="VideoUrl" class="fw-bold">Youtube Video Linki</label>
                        <input asp-for="VideoUrl" class="form-control" placeholder="Örn: https://www.youtube.com/watch?v=..." />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="fw-bold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
                        <a asp-action="List" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Listeye Dön</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>