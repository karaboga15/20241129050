@model internetprogramciligi1.Models.Course

@{
    ViewData["Title"] = "Yeni Kurs Ekle";
}

<div class="container mt-5">
    <h2>Yeni Kurs Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Örn: C# ile Web Geliştirme" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label">Kategori Seç</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Bir Kategori Seçin --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InstructorId" class="control-label">Eğitmen Seç</label>
                    <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                        <option value="">-- Bir Eğitmen Seçin --</option>
                    </select>
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                </div>

                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>