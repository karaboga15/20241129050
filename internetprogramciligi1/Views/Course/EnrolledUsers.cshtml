@model IEnumerable<internetprogramciligi1.Models.Enrollment>

@{
    ViewData["Title"] = "Kayıtlı Öğrenciler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Bu Kursa Kayıtlı Öğrenciler</h6>
        <a asp-action="List" class="btn btn-secondary btn-sm">Geri Dön</a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Öğrenci Email</th>
                            <th>Kullanıcı Adı</th>
                            <th>Kayıt Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User.Email</td>
                                <td>@item.User.UserName</td>
                                <td>@item.EnrollmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-user-slash fa-2x mb-3"></i><br />
                Bu kursa henüz kimse kayıt olmamış.
            </div>
        }
    </div>
</div>